<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Fragmento do Mapa -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- TextView de Título centralizado no topo da tela -->
    <TextView
        android:id="@+id/titleMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="#40FFFFFF"
        android:text="MobCidade"
        android:textColor="#5CA170"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <!-- Botão sobreposto ao mapa -->
    <Button
        android:id="@+id/btnExploreAPP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explore o APP"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="4dp"
        android:backgroundTint="#5CA170"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:onClick="explorarAPP" />
</FrameLayout>
